# Kubernetes Secret Template
# DO NOT commit this file with actual values!
# Use kubectl to create secrets from the command line or use Azure Key Vault

apiVersion: v1
kind: Secret
metadata:
  name: financial-analysis-secrets
  namespace: default
type: Opaque
stringData:
  # Database Connection (REQUIRED)
  DATABASE_URL: "postgresql://username:password@hostname:5432/database?sslmode=require"
  
  # Azure Databricks Credentials
  AZURE_DATABRICKS_TOKEN: ""
  AZURE_DATABRICKS_PRIVATE_ENDPOINT_URL: ""
  
  # Azure PostgreSQL Credentials
  AZURE_POSTGRES_PASSWORD: ""
  AZURE_POSTGRES_PRIVATE_ENDPOINT_URL: ""
  
  # Azure CosmosDB Credentials
  AZURE_COSMOS_KEY: ""
  AZURE_COSMOS_PRIVATE_ENDPOINT_URL: ""
  
  # Azure OpenAI Credentials
  AZURE_OPENAI_API_KEY: ""
  AZURE_OPENAI_PRIVATE_ENDPOINT_URL: ""
  
  # Azure OpenAI Embedding Credentials
  AZURE_OPENAI_EMBEDDING_KEY: ""
  AZURE_OPENAI_EMBEDDING_PRIVATE_ENDPOINT_URL: ""
  
  # Azure Service Principal (if not using Managed Identity)
  AZURE_CLIENT_SECRET: ""
  
  # Azure Key Vault (optional)
  AZURE_KEYVAULT_URL: ""
  
  # OpenAI API Key (fallback)
  OPENAI_API_KEY: ""

---
# Alternative: Create secrets from command line
# kubectl create secret generic financial-analysis-secrets \
#   --from-literal=DATABASE_URL="postgresql://..." \
#   --from-literal=AZURE_DATABRICKS_TOKEN="..." \
#   --from-literal=AZURE_POSTGRES_PASSWORD="..." \
#   --from-literal=AZURE_COSMOS_KEY="..." \
#   --from-literal=AZURE_OPENAI_API_KEY="..." \
#   --from-literal=AZURE_OPENAI_EMBEDDING_KEY="..." \
#   --namespace=default
