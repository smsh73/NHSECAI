# Azure Container Registry & Kubernetes Deployment Configuration
# Copy this file to .env.production and fill in the values

# ===================================
# Azure Infrastructure
# ===================================
ACR_NAME=your-acr-name
AKS_CLUSTER_NAME=your-aks-cluster
RESOURCE_GROUP=your-resource-group
NAMESPACE=default

# ===================================
# Application Configuration
# ===================================
NODE_ENV=production
PORT=5000

# ===================================
# Database Configuration
# ===================================
DATABASE_URL=postgresql://username:password@hostname:5432/database?sslmode=require

# ===================================
# Azure Databricks
# ===================================
AZURE_DATABRICKS_HOST=your-workspace.azuredatabricks.net
AZURE_DATABRICKS_HTTP_PATH=/sql/1.0/warehouses/your-warehouse-id
AZURE_DATABRICKS_TOKEN=dapi...
AZURE_DATABRICKS_USE_PRIVATE_ENDPOINT=false
AZURE_DATABRICKS_PRIVATE_ENDPOINT_URL=

# ===================================
# Azure PostgreSQL
# ===================================
AZURE_POSTGRES_HOST=your-server.postgres.database.azure.com
AZURE_POSTGRES_PORT=5432
AZURE_POSTGRES_DATABASE=financial_db
AZURE_POSTGRES_USERNAME=dbadmin
AZURE_POSTGRES_PASSWORD=your-password
AZURE_POSTGRES_SSL=true
AZURE_POSTGRES_PRIVATE_ENDPOINT_URL=

# ===================================
# Azure CosmosDB
# ===================================
AZURE_COSMOS_ENDPOINT=https://your-account.documents.azure.com:443/
AZURE_COSMOS_KEY=your-cosmos-key
AZURE_COSMOS_DATABASE_ID=financial_db
AZURE_COSMOS_PRIVATE_ENDPOINT_URL=

# ===================================
# Azure OpenAI PTU
# ===================================
AZURE_OPENAI_PTU_ENDPOINT=https://your-openai.openai.azure.com/
AZURE_OPENAI_PTU_DEPLOYMENT=gpt-4
AZURE_OPENAI_PTU_API_KEY=your-api-key
AZURE_OPENAI_PTU_API_VERSION=2024-02-15-preview
AZURE_OPENAI_PTU_PRIVATE_ENDPOINT_URL=

# ===================================
# Azure OpenAI Embedding
# ===================================
AZURE_OPENAI_EMBEDDING_ENDPOINT=https://your-openai.openai.azure.com/
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-3-large
AZURE_OPENAI_EMBEDDING_MODEL=text-embedding-3-large
AZURE_OPENAI_EMBEDDING_API_KEY=your-embedding-key
AZURE_OPENAI_EMBEDDING_API_VERSION=2024-02-15-preview
AZURE_OPENAI_EMBEDDING_PRIVATE_ENDPOINT_URL=

# ===================================
# Azure AI Search
# ===================================
AZURE_SEARCH_ENDPOINT=https://your-search.search.windows.net
AZURE_SEARCH_API_KEY=your-search-key
AZURE_SEARCH_INDEX_NAME=financial-index

# ===================================
# Azure Authentication
# ===================================
AZURE_TENANT_ID=your-tenant-id
AZURE_CLIENT_ID=your-client-id
AZURE_CLIENT_SECRET=your-client-secret
AZURE_USE_SYSTEM_MANAGED_IDENTITY=false

# ===================================
# Azure Key Vault (Optional)
# ===================================
AZURE_KEYVAULT_URL=https://your-keyvault.vault.azure.net/

# ===================================
# Fallback: Standard OpenAI (Optional)
# ===================================
OPENAI_API_KEY=sk-...
