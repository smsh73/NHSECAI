{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./",
    "declaration": false,
    "sourceMap": false,
    "removeComments": true,
    "noEmit": true,
    "target": "ES2020",
    "lib": ["ES2020"],
    "moduleResolution": "NodeNext" 
  },
  "include": [
    "server/**/*",
    "shared/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "client",
    "scripts",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
