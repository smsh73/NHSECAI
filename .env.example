# Application Configuration
NODE_ENV=production
PORT=5000

# Database Configuration (REQUIRED)
DATABASE_URL=postgresql://username:password@hostname:5432/database?sslmode=require

# Azure Databricks Configuration
AZURE_DATABRICKS_HOST=your-databricks-workspace.azuredatabricks.net
AZURE_DATABRICKS_HTTP_PATH=/sql/1.0/warehouses/your-warehouse-id
AZURE_DATABRICKS_TOKEN=your-databricks-access-token
AZURE_DATABRICKS_USE_PRIVATE_ENDPOINT=false
AZURE_DATABRICKS_PRIVATE_ENDPOINT_URL=

# Azure PostgreSQL Configuration
AZURE_POSTGRES_HOST=your-postgres-server.postgres.database.azure.com
AZURE_POSTGRES_PORT=5432
AZURE_POSTGRES_DATABASE=your-database-name
AZURE_POSTGRES_USERNAME=your-username
AZURE_POSTGRES_PASSWORD=your-password
AZURE_POSTGRES_SSL=true
AZURE_POSTGRES_PRIVATE_ENDPOINT_URL=

# Azure CosmosDB Configuration
AZURE_COSMOS_ENDPOINT=https://your-cosmosdb-account.documents.azure.com:443/
AZURE_COSMOS_KEY=your-cosmosdb-primary-key
AZURE_COSMOS_DATABASE_ID=your-database-id
AZURE_COSMOS_PRIVATE_ENDPOINT_URL=

# Azure OpenAI Configuration (PTU)
AZURE_OPENAI_ENDPOINT=https://your-openai-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-openai-api-key
AZURE_OPENAI_DEPLOYMENT=gpt-4
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_PRIVATE_ENDPOINT_URL=

# Azure OpenAI Embedding Configuration
AZURE_OPENAI_EMBEDDING_ENDPOINT=https://your-openai-resource.openai.azure.com/
AZURE_OPENAI_EMBEDDING_KEY=your-embedding-api-key
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-3-large
AZURE_OPENAI_EMBEDDING_MODEL=text-embedding-3-large
AZURE_OPENAI_EMBEDDING_API_VERSION=2024-02-15-preview
AZURE_OPENAI_EMBEDDING_PRIVATE_ENDPOINT_URL=

# Azure Authentication (Service Principal or Managed Identity)
AZURE_TENANT_ID=your-tenant-id
AZURE_CLIENT_ID=your-client-id
AZURE_CLIENT_SECRET=your-client-secret
AZURE_MANAGED_IDENTITY_CLIENT_ID=
AZURE_USE_SYSTEM_MANAGED_IDENTITY=false

# Azure Key Vault (Optional)
AZURE_KEYVAULT_URL=https://your-keyvault.vault.azure.net/

# OpenAI API (Fallback)
OPENAI_API_KEY=your-openai-api-key

# Azure Search (if used)
AZURE_SEARCH_ENDPOINT=https://your-search-service.search.windows.net
